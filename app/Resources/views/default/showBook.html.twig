{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>{{ book.name }}</h1>
            </div>
            <div>
                <ul>
                    <li>Release Date: {{ book.releaseDate|date('d-m-Y') }}</li>
                    <li>Length: {{ book.length }}</li>
                    <li>Genres: {{ book.genres }}</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
